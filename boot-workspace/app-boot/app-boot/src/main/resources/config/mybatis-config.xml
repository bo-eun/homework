<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>

	<typeAliases>
	<!-- .은 패키지의 의미... 클래스의 이너 클래스를 부르려면 $로 불러오기 -->
	<!-- java.util.lang 안에 있는 클래스는 alias 안해도 됨... 자바에서 import 안해도 쓸 수 있는 것 처럼 그냥 사용 가능 -->
	<!-- vo 파일에서 생성한 class를 sql/board/BoardMapper.xml에서 짧은 이름으로 사용하기 위해 alias로 만듦 -->
		<typeAlias type="java.util.Map" alias="map" />
		<typeAlias type="it.korea.app_boot.board.dto.Board$Request" alias="boardReq" />
		<typeAlias type="it.korea.app_boot.board.dto.Board$Response" alias="boardResp" />
		<typeAlias type="it.korea.app_boot.board.dto.Board$BoardFiles" alias="boardFiles" />
		<typeAlias type="it.korea.app_boot.board.dto.Board$Detail" alias="boardDetail" />

		<typeAlias type="it.korea.app_boot.board.dto.BoardSearchDTO" alias="searchDTO"></typeAlias>
	</typeAliases>
</configuration>
